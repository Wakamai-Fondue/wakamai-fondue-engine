{
	"name": "@wakamai-fondue/engine",
	"version": "1.0.0",
	"description": "What if you could actually inspect your web fonts? In the same context that you actually use those web fonts? That's what this is for.",
	"module": "./index.js",
	"main": "./lib/index.js",
	"directories": {
		"lib": "lib",
		"test": "test"
	},
	"scripts": {
		"coverage": "vitest --coverage --run",
		"test": "vitest --run",
		"lint": "npm-run-all lint:**",
		"lint:eslint": "eslint .",
		"lint:prettier": "prettier --check .",
		"lint-fix": "npm-run-all --sequential lint-fix:** prettier",
		"lint-fix:eslint": "eslint --fix .",
		"prettier": "prettier --write .",
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Wakamai-Fondue/wakamai-fondue-engine.git"
	},
	"keywords": [
		"font",
		"ttf",
		"woff",
		"woff2",
		"otf",
		"fontkit",
		"opentype",
		"lib-font",
		"layout",
		"css"
	],
	"author": "RoelN",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/Wakamai-Fondue/wakamai-fondue-engine/issues"
	},
	"homepage": "https://wakamaifondue.com/",
	"devDependencies": {
		"@babel/preset-env": "7.25.8",
		"@eslint/js": "9.13.0",
		"@rollup/plugin-commonjs": "28.0.1",
		"@rollup/plugin-json": "6.1.0",
		"@rollup/plugin-node-resolve": "15.3.0",
		"@vitest/coverage-v8": "2.1.3",
		"babel-jest": "29.7.0",
		"eslint": "9.13.0",
		"eslint-plugin-jest": "28.8.3",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-prettier": "5.2.1",
		"globals": "15.11.0",
		"husky": "9.1.6",
		"lint-staged": "15.2.10",
		"npm-run-all": "4.1.5",
		"prettier": "3.3.3",
		"rollup": "4.24.0",
		"vitest": "2.1.3"
	},
	"lint-staged": {
		"*.{js,cjs,mjs,json,md}": [
			"prettier --write"
		]
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"lib-font": "2.4.3"
	}
}
